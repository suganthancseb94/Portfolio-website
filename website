  <script>
    function copyRepo(){
      const repo = document.getElementById('repo').innerText || 'https://github.com/your-repo';
      navigator.clipboard?.writeText(repo).then(()=>{alert('Repo link copied')}).catch(()=>{prompt('Copy this link',repo)});
    }
  </script>
